{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "assets/*": ["assets/*"],
            "components/*": ["components/*"],
            "constants/*": ["constants/*"],
            "services/*": ["services/*"],
            "contexts/*": ["contexts/*"],
            "database/*": ["database/*"],
            "hooks/*": ["hooks/*"],
            "styles/*": ["styles/*"],
            "tests/*": ["tests/*"],
            "types/*": ["types/*"],
            "utils/*": ["utils/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
    "exclude": ["**/node_modules"],
    "files": ["globals.d.ts"]
}
